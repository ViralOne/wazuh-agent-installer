# !/bin/bash
wazuh_username=$2
wazuh_ip=$4
error_sudo="Please run the installer with sudo"
error_flags="\nSome data was not provided, please check for all the needed flags -u <USERNAME> & -i <IP>, the order of the flags is not interchangeable"

if [ ! -z "$SUDO_USER" ]; then
    if [ "$1"  = "-u" ]; then
        if [ "$3" = "-i" ]; then
            if [ "$(sipcalc $4 | grep ERR)" != "" ]; then
                echo "IP: $4 is not valid, please provide a valid IP"
                exit 1
            else
                # Install sipcalc package to be easier to check th IP
                sudo apt update
                sudo apt install sipcalc curl -y

                echo "Installing Wazuh Agent on IP: $4"
                curl -so wazuh-agent-4.3.8.deb https://packages.wazuh.com/4.x/apt/pool/main/w/wazuh-agent/wazuh-agent_4.3.8-1_amd64.deb && sudo WAZUH_MANAGER="$wazuh_ip" WAZUH_AGENT_NAME="$wazuh_username" WAZUH_REGISTRATION_PASSWORD='password' dpkg -i ./wazuh-agent-4.3.8.deb ; rm wazuh-agent-4.3.8.deb

                sudo systemctl daemon-reload
                sudo systemctl enable wazuh-agent
                sudo systemctl start wazuh-agent
                exit 1
            fi
        fi
        echo ${error_flags}
    else
        echo ${error_flags}
    fi
else
    echo ${error_sudo}
fi
